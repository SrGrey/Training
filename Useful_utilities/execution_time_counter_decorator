from datetime import datetime
import time

def time_counter(unix_time=False): 
    def decorator(func):
        def wrapper(*args, **kwargs):
            start = datetime.now()
            func(*args, **kwargs)
            delta = datetime.now() - start
            if unix_time:
                delta = delta.total_seconds()
            print(f"delta {delta}")
        return wrapper
    return decorator


@time_counter(unix_time=True)
def sleeping(sleep_time: int):
    print("start sleeping")
    time.sleep(sleep_time)
    print("stop sleeping")

sleeping(5)
